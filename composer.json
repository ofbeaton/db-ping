{
    "name": "ofbeaton/db-ping",
    "license": "MIT",
    "description": "Verify a Database server is responding.",
    "keywords": ["database", "ping", "db", "mysql"],
    "homepage": "https://github.com/ofbeaton/db-ping",
    "type": "project",
    "authors": [
        {
            "name": "Finlay Beaton",
            "email": "ofbeaton@gmail.com"
        },
        {
            "name": "db-ping Community",
            "homepage": "https://github.com/ofbeaton/db-ping/graphs/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ofbeaton\\DbPing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ofbeaton\\DbPing\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
        "symfony/console": "^3.1",
        "jakub-onderka/php-parallel-lint": "^0.9.2"
    },
    "require-dev": {
        "phing/phing": "^2.14",
        "squizlabs/php_codesniffer": "^2.6",
        "ofbeaton/granite": "^1.0",
        "phpunit/phpunit": "^5.7"
    },
    "suggest": {
        "ext-pdo_mysql": "Verify MySQL servers",
        "ext-pcntl": "Linux signal handling for gracefull CTRL-C"
    },
    "config": {
        "bin-dir": "vbin"

    },
    "bin": [
        "bin/db-ping"
    ],
    "scripts": {
      "test": [
        "parallel-lint . --exclude vendor",
        "phpunit --stderr --verbose",
        "bash -c 'if [ \"$TRAVIS_PHP_VERSION\" != \"7.0\" ] && [ \"$TRAVIS_PHP_VERSION\" != \"nightly\" ]; then vbin/phpcs; fi;'"
      ]
    }
}
